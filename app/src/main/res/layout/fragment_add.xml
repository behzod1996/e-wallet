<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue_charcoal"
    tools:context = ".ui.add.AddFragment">

    <include
        android:id="@+id/layout_add"
        layout="@layout/wallet_add_layout"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/text_add_expense_income"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_medium"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue_ribbon"
        app:cornerRadius="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>